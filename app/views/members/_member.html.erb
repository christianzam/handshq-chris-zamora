<div id="<%= dom_id member %>">
  <div class="m-5 max-w-sm">
    <div class="container mx-auto">
      <div class="flex">
        <div class="flex-1">
          <div class="bg-white shadow m-8">
            <div class="px-6 py-6 pb-0 border-t-4 border-green">
              <%= image_tag "https://placeimg.com/128/128/people?q=1", class:"rounded-full mx-auto block mb-3 -mt-6 shadow-md", alt: "people" %>
              <div class="text-center text-xl mb-2"><%= member.nickname %></div>
              <div class="text-center text-grey-light mb-6"><%= member.email %></div>
              <div class="text-center text-grey-darker mb-4">
                <span class="text-grey-light px-1">&bullet;</span><%= member.interests["activity"] %>
                <span class="text-grey-light px-1">&bullet;</span><%= member.interests["activity_2"] %>
              </div>
              <% if action_name != "show" %>
                <div class="text-center text-grey-darker mb-4">
                  <span><%= link_to "View Profile", member, class: "font-semibold uppercase hover:bg-grey hover:text-grey no-underline text-grey-darkest py-4" %></span>
                  <span class="mx-5"></span>
                  <span><%= link_to 'Edit Member', edit_member_path(member), class: "font-semibold uppercase hover:bg-green hover:text-black no-underline text-grey-darkest py-4" %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
