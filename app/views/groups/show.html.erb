<div class="container flex flex-wrap justify-center items-center">
  <div class="py-3">
  <% unless @group.members.empty? %>
    <%= form_tag draws_path(:id => @group.id), :method => :post do %>
      <%= submit_tag 'Start Draw', :class => "bg-green-900 hover:bg-green-700 cursor-pointer text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  <% end %>
  </div>
</div>
<div class="container flex flex-wrap justify-center items-center">
  <div class="card card w-1/3 h-auto bg-white shadow pt-3">
    <div class="text-center text-xl mb-2"><%= @group.name&.capitalize %> group</div>
    <div class="px-6 py-6 pb-0">
      <%= image_tag "people.png", class:"border-4 border-black-500 mx-auto block mb-3 -mt-6 shadow-md", style:'width:200px;height:150px;', alt: "people" %>
    </div>
    <div class="bg-red-900 py-3">
      <% unless @group.members.empty? %>
        <div class="text-center text-white text-xl"> Santas: </div>
      <% end %>
      <div class="text-center text-white text-med mt-3">
        <%= names(@group) %>
      </div>
    </div>
    <div class="bg-green-900 text-center p-5">
      <%= link_to 'Add a Santa', edit_group_path(@group), class: "bg-red-900 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full" %>
    </div>
    <div class="bg-green-900 text-center p-5">
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this group', group_path(@group), method: :delete, class: "mt-1 rounded-sm py-2 px-3 bg-red-900 font-medium text-white" %>
      </div>
    </div>
  </div>
  <div class="bg-green-900 card rounded-full w-1/3 h-auto bg-white shadow pt-3 mx-3">
    <div class="text-white text-center text-xl mb-2"> 
      <p>Santas not</p>
      <p>in the draw</p>
    </div>
    
    <div class="bg-red-900 container justify-center items-center p-5">
      <div class="bg-green-700 rounded-md text-white p-3">
        <%= available_santas %>
      </div>
    </div>
  </div>
</div>
