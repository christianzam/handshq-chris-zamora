<div class="container flex flex-wrap justify-center items-center">
  <div class="container text-center text-red-900 my-5 text-xl">
    Create a new Secret Santa group!
  </div>
  <div class="bg-green-900 card w-1/3 h-auto shadow p-3">
    <div class="text-white text-center text-xl mb-2"> 
      <p>Give it a name</p>
    </div>

    <%= form_with(model: @group, class: "contents") do |form| %>
      <div class="my-5">
        <%= form.text_field :name, required: true, maxlength: "15", minlength: "2", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="inline">
        <%= form.submit class: "bg-red-900 rounded-lg py-3 px-5 bg-red-900 text-white inline-block font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>