<div class="container flex flex-wrap justify-center items-center">
  <div class="bg-green-900 card card w-1/3 h-auto bg-white shadow p-3">
    <div class="text-white text-center text-xl mb-2"> 
      <p>Give it name</p>
    </div>

    <%= form_with(model: @group, class: "contents") do |form| %>
      <div class="my-5">
        <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="inline">
        <%= form.submit class: "bg-red-900 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>